############################################################

noinst_PROGRAMS = clinkcctestunit

AM_CPPFLAGS = -I\$(top_srcdir)/include -I../

HEADER

print<<NOINST_HEADERS;
noinst_HEADERS = \\
NOINST_HEADERS

my @find_files = `find ../ -name *.h`;
my @include_files;
foreach $file (@find_files) {
	$file =~ s/\n//;
	$file = "\t" . $file;
	push @include_files, $file;
}
print join(" \\\n", @include_files) . "\n";

print<<SOURCES;

clinkcctestunit_SOURCES = \\
SOURCES

my @find_files = `find ../ -name *.cpp -or -name *.cpp`;
my @source_files;
foreach $file (@find_files) {
	$file =~ s/\n//;
	$file = "\t" . $file;
	push @source_files, $file;
}
print join(" \\\n", @source_files) . "\n";

print<<FOTTER;

clinkcctestunit_LDADD = ../../lib/unix/libclink++.a -ldl \@XML_LIBS\@
FOTTER

